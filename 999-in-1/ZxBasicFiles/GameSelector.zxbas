function SelectGame() as uByte

    ShowNextTitle()
    SetSymbol(0,0)
    SetLevel(level)
    UpdateScreen()

    Dim action as uByte

    while action <> 3

        if game = 0 then

            action = ShowTetris()

        else if game = 1 then

            action = ShowArkanoid()

        else if game = 2 then

            action = ShowRacing()

        else if game = 3 then

            action = ShowSnake()

        end if 

        if action = 1 then
            game = game + 1
            if game > 3 then game = 0
        else if action = 2 then
            game = game - 1
            if game > 3 then game = 3
        else if action = 3 then

            FillRect(1,10,1,20,0)
            UpdateScreen()
            if game = 0 then                
                return RunTetris(level)
            else if game = 1 then
                return RunArkanoid(level)
            else if game = 2 then 
                return RunRacing(level)
            else if game = 3 then
                return RunSnake(level)
            'else if game = 2 then
            'else if game = 3 then
            end if

        end if

    end while

end function